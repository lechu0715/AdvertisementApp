@model IEnumerable<AdvertisementApp.Core.Models.Domains.Advertisement>

<div id="advertisementsTable">
    <table class="table table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Tytuł</th>
                <th scope="col">Opis</th>
                <th scope="col">Kategoria</th>
                <th scope="col">Cena</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var advertisement in Model)
                {
                    <tr>
                        <td>Tu będzie zdjęcie</td>
                        <td>
                            <a href="@Url.Action("Advertisement", "Advertisement",
                                        new { id = advertisement.Id})"
                               class="font-weight-bold">
                                @advertisement.Title
                            </a>
                        </td>
                        <td>@advertisement.Description</td>
                        <td>@advertisement.Category.Name</td>
                        <td>@advertisement.Price</td>
                        

                        <td>
                            <button class="btn btn-danger mr-2"
                                    onclick="deleteAdvertisement('@advertisement.Id', this)">
                                Usuń ogłoszenie
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center"
                    colspan="5">
                    Brak ogłoszeń
                </tr>
            }
        </tbody>
    </table>
</div>